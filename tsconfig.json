{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "types": [  "vite/client", "node" ],
    "paths": {
      "@/*": [
        ".vitepress/*"
      ],
      "@views*": [
        ".vitepress/theme/views*"
      ],
      "@components*": [
        ".vitepress/theme/components*"
      ],
      "@icons*": [
        ".vitepress/theme/components/icons*"
      ],
      "@vp-theme*": [
        "node_modules/vitepress/dist/client/theme-default*"
      ],
      "@hooks*": [
        ".vitepress/hooks*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "node/*.ts",
    "posts/**/*.ts",
    "posts/**/*.mts",
    "posts/**/*.vue",
    ".vitepress/**/*.ts",
    ".vitepress/**/*.d.ts",
    ".vitepress/**/*.vue",
//    "node_modules/vitepress/dist/client/theme-default/**/*.vue",
  ],
}
